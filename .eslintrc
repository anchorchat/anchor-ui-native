{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native"
  ],
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
  },
  "extends" : [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb"
  ],
  "rules": {
    "max-len": [2, { "code": 100, "ignoreComments": true, "ignoreTemplateLiterals": true }],
    "react/jsx-filename-extension": ["off"],
    "comma-dangle": 0,
    "react/display-name": 0,
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1 }]
  },
  "globals": {
    "window": true
  }
}
